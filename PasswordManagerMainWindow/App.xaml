<Application x:Class="PasswordManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="AuthenticationWindow/AuthenticationWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="AuthenticationWindow/Styles/MainPageStyles.xaml" />
                <ResourceDictionary Source="AuthenticationWindow/Styles/LoginPageStyles.xaml" />
                <ResourceDictionary Source="AuthenticationWindow/Styles/SignUpPageStyles.xaml" />
                <ResourceDictionary Source="AuthenticationWindow/Styles/ResetPasswordStyles.xaml"/>
                <ResourceDictionary Source="AuthenticationWindow/Themes/DarkTheme.xaml"/>

                <ResourceDictionary Source="MainWindow/Styles/MainStyles.xaml"/>
                <ResourceDictionary Source="MainWindow/Themes/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
